{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",          // <- Archivos compilados van a dist/
    "rootDir": "src",          // <- Carpeta de cÃ³digo fuente
    "allowJs": false,          // <- No compila archivos .js
    "noEmit": true             // <- Vite se encarga de compilar, TS solo chequea tipos
  },
  "include": ["src"]
}
