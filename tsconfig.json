{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "noEmit": true,

    "baseUrl": ".",          // <--- base para paths
    "paths": {
      "@/*": ["src/*"]       // <--- alias @ funciona para TS
    }
  },
  "include": ["src"]
}
